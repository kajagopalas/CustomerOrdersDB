-- Create and use database
CREATE DATABASE CustomerOrdersDB;
USE CustomerOrdersDB;

-- Customers Table
CREATE TABLE Customers (
    customer_id INT NOT NULL ,
    name VARCHAR(100),
    email VARCHAR(100),
    city VARCHAR(50),
	Constraint PK Primary Key (customer_id)
)

-- Orders Table
CREATE TABLE Orders (
    order_id INT NOT NULL ,
    customer_id INT  NULL,
    order_date DATE,
    total_amount DECIMAL(10,2),
	Constraint PK1 Primary Key (order_id),
    CONSTRAINT fk_customer FOREIGN KEY (customer_id) REFERENCES Customers(customer_id)
)

-- Products Table
CREATE TABLE Products (
    product_id INT NOT NULL ,
    product_name VARCHAR(100),
    unit_price DECIMAL(10,2),
	Constraint PK2 Primary Key (product_id)
)

-- OrderItems Table
CREATE TABLE OrderItems (
    order_item_id INT NOT NULL ,
    order_id INT  NULL,
    product_id INT  NULL,
    quantity INT,
    price DECIMAL(10,2),
	Constraint PK3 Primary Key (order_item_id),
    CONSTRAINT fk_order FOREIGN KEY (order_id) REFERENCES Orders(order_id),
    CONSTRAINT fk_product FOREIGN KEY (product_id) REFERENCES Products(product_id)
)

-- Salespersons Table
CREATE TABLE Salespersons (
    salesperson_id INT NOT NULL ,
    name VARCHAR(100),
    city VARCHAR(50),
    commission DECIMAL(5,2)  ,
	Constraint PK4 Primary Key (salesperson_id)
)

-- CustomerSalesperson Mapping Table
CREATE TABLE CustomerSalesperson (
    customer_id INT NOT NULL,
    salesperson_id INT NOT NULL,
    CONSTRAINT fk_cs_customer FOREIGN KEY (customer_id) REFERENCES Customers(customer_id),
    CONSTRAINT fk_cs_salesperson FOREIGN KEY (salesperson_id) REFERENCES Salespersons(salesperson_id)
)

Create Table Calendar (
Date Date Not NULL,
Constraint PK9 Primary Key (Date))


DimYear

CREATE TABLE DimYear (
    Year_ID INT NOT NULL,
    CONSTRAINT PK5 PRIMARY KEY (Year_ID)
)


DimQuarter

CREATE TABLE DimQuarter (
    Year_ID INT NOT NULL,
    Quarter_ID INT NOT NULL,
    CONSTRAINT PK6 PRIMARY KEY (Year_ID, Quarter_ID),
    CONSTRAINT FK1 FOREIGN KEY (Year_ID) REFERENCES DimYear(Year_ID)
)

DimMonth

CREATE TABLE DimMonth (
    Year_ID INT NOT NULL,
    Quarter_ID INT NOT NULL,
    Month_ID INT NOT NULL,
    Month_Name VARCHAR(20) NOT NULL,
    CONSTRAINT PK7 PRIMARY KEY (Year_ID, Quarter_ID, Month_ID),
    CONSTRAINT FK2 FOREIGN KEY (Year_ID, Quarter_ID) REFERENCES DimQuarter(Year_ID, Quarter_ID)
)

DimDate

CREATE TABLE DimDate (
    [Date] DATE NOT NULL,
    Day_Of_Week INT NOT NULL,
    Day_Name VARCHAR(20) NOT NULL,
    Day_Of_Month INT NOT NULL,
    Week_Of_Year INT NOT NULL,
    Month_ID INT NOT NULL,
    Month_Name VARCHAR(20) NOT NULL,
    Quarter_ID INT NOT NULL,
    Year_ID INT NOT NULL,
    Is_Weekend CHAR(1) NOT NULL,
    CONSTRAINT PK8 PRIMARY KEY ([Date]),
    CONSTRAINT FK4 FOREIGN KEY (Year_ID, Quarter_ID, Month_ID)
        REFERENCES DimMonth(Year_ID, Quarter_ID, Month_ID),
    CONSTRAINT FK5 FOREIGN KEY (Year_ID, Quarter_ID)
        REFERENCES DimQuarter(Year_ID, Quarter_ID),
    CONSTRAINT FK6 FOREIGN KEY (Year_ID)
        REFERENCES DimYear(Year_ID)
)

Insert Years

INSERT INTO DimYear (Year_ID)
SELECT DISTINCT YEAR([Date])
FROM Calendar

Insert Quarters

INSERT INTO DimQuarter (Year_ID, Quarter_ID)
SELECT DISTINCT 
    YEAR([Date]), 
    DATEPART(QUARTER, [Date])
FROM Calendar

Insert Months

INSERT INTO DimMonth (Year_ID, Quarter_ID, Month_ID, Month_Name)
SELECT DISTINCT
    YEAR([Date]),
    DATEPART(QUARTER, [Date]),
    MONTH([Date]),
    DATENAME(MONTH, [Date])
FROM Calendar

Insert Dates

INSERT INTO DimDate (
    [Date], Day_Of_Week, Day_Name, Day_Of_Month, Week_Of_Year,
    Month_ID, Month_Name, Quarter_ID, Year_ID, Is_Weekend
)
SELECT 
    [Date],
    DATEPART(WEEKDAY, [Date]),
    DATENAME(WEEKDAY, [Date]),
    DATEPART(DAY, [Date]),
    DATEPART(WEEK, [Date]),
    MONTH([Date]),
    DATENAME(MONTH, [Date]),
    DATEPART(QUARTER, [Date]),
    YEAR([Date]),
    CASE WHEN DATENAME(WEEKDAY, [Date]) IN ('Saturday', 'Sunday') THEN 'Y' ELSE 'N' END
FROM Calendar

Create Table DimProduct_Category (
ProductCategoryID Int,
ProductCategoryName Varchar(50),
Constraint PK10 Primary key (ProductCategoryID))

Create Table DimProduct_Subcategory (
ProductSubcategoryID Int not null,
ProductSubcategoryName Varchar(50),
ProductCategoryID Int,
Constraint PK11 Primary Key (ProductSubcategoryID),
Constraint FK7 foreign key (ProductCategoryID) references Product_Category (ProductCategoryID))

Create Table DimProduct (
Product_id Int Not null,
Product_name VARCHAR(100),
ProductSubcategoryID Int,
ProductCategoryID Int,
Constraint PK12 Primary Key (Product_id),
Constraint FK8 foreign key (ProductSubcategoryID) references Product_Subcategory (ProductSubcategoryID))
